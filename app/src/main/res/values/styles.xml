<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NavMenuTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">bold</item>  <!-- Làm đậm chữ -->
        <item name="android:textColor">@color/black</item> <!-- Đổi màu chữ nếu cần -->
    </style>
    <style name="CustomSpinnerText">
        <item name="android:textColor">#FF0000</item> <!-- Màu chữ đỏ -->
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Theme trong suốt cho VoiceCommandActivity -->
    <style name="AppTheme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>